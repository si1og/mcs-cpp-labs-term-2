{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/sbin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "valgrind: Run with Memory Check",
            "type": "shell",
            "command": "valgrind",
            "args": [
              "--leak-check=full",
              "--track-origins=yes",
              "--show-leak-kinds=all",
              "--error-exitcode=1",
              "--log-file=valgrind.log",
              "${workspaceFolder}/your_executable"
            ],
            "group": {
              "kind": "test",
              "isDefault": true
            },
            "problemMatcher": []
          }
    ],
    "version": "2.0.0"
}